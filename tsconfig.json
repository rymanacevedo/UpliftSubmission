{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": ".",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "types": ["jest"]
    },
    "include": [
      "src/**/*",
      "data/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }